<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:text="위치제공자 : "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tvLat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pgbProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvProvider"
        app:layout_constraintLeft_toRightOf="@id/tvProvider"
        app:layout_constraintTop_toTopOf="@id/tvProvider" />

    <TextView
        android:id="@+id/tvLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="위도 : "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tvLng"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProvider" />

    <ProgressBar
        android:id="@+id/pgbLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvLat"
        app:layout_constraintLeft_toRightOf="@id/tvLat"
        app:layout_constraintTop_toTopOf="@id/tvLat" />

    <TextView
        android:id="@+id/tvLng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="경도 : "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tvAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLat" />

    <ProgressBar
        android:id="@+id/pgbLng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvLng"
        app:layout_constraintLeft_toRightOf="@id/tvLng"
        app:layout_constraintTop_toTopOf="@id/tvLng" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="주소 : "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tvTemp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLng" />

    <ProgressBar
        android:id="@+id/pgbAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvAddress"
        app:layout_constraintLeft_toRightOf="@id/tvAddress"
        app:layout_constraintTop_toTopOf="@id/tvAddress" />

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="현재기온 : "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tvTempMax"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddress" />

    <ProgressBar
        android:id="@+id/pgbTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvTemp"
        app:layout_constraintLeft_toRightOf="@id/tvTemp"
        app:layout_constraintTop_toTopOf="@id/tvTemp" />

    <TextView
        android:id="@+id/tvTempMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="최고기온 : "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tvTempMin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTemp" />

    <ProgressBar
        android:id="@+id/pgbTempMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvTempMax"
        app:layout_constraintLeft_toRightOf="@id/tvTempMax"
        app:layout_constraintTop_toTopOf="@id/tvTempMax" />

    <TextView
        android:id="@+id/tvTempMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최저기온 : "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tvSky"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTempMax" />

    <ProgressBar
        android:id="@+id/pgbTempMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvTempMin"
        app:layout_constraintLeft_toRightOf="@id/tvTempMin"
        app:layout_constraintTop_toTopOf="@id/tvTempMin" />

    <TextView
        android:id="@+id/tvSky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="날씨 : "
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTempMin" />

    <ProgressBar
        android:id="@+id/pgbSky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvSky"
        app:layout_constraintLeft_toRightOf="@id/tvSky"
        app:layout_constraintTop_toTopOf="@id/tvSky" />

</android.support.constraint.ConstraintLayout>